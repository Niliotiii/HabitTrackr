<div class="row">
  <div class="col-xl-3 col-sm-6 grid-margin stretch-card">
    <div class="card">
      <div class="card-body">
        <div class="row">
          <div class="col-9">
            <div class="d-flex align-items-center align-self-start">
              <h3 class="mb-0">{{ habitsCount }}</h3>
            </div>
          </div>
        </div>
        <h6 class="text-muted font-weight-normal">Total HÃ¡bitos</h6>
      </div>
    </div>
  </div>

  <div class="col-xl-3 col-sm-6 grid-margin stretch-card">
    <div class="card">
      <div class="card-body">
        <div class="row">
          <div class="col-9">
            <div class="d-flex align-items-center align-self-start">
              <h3 class="mb-0">{{ goalsCount }}</h3>
            </div>
          </div>
        </div>
        <h6 class="text-muted font-weight-normal">Total Metas</h6>
      </div>
    </div>
  </div>

  <div class="col-xl-3 col-sm-6 grid-margin stretch-card">
    <div class="card">
      <div class="card-body">
        <div class="row">
          <div class="col-9">
            <div class="d-flex align-items-center align-self-start">
              <h3 class="mb-0">{{ activitiesCount }}</h3>
            </div>
          </div>
        </div>
        <h6 class="text-muted font-weight-normal">Total Atividades</h6>
      </div>
    </div>
  </div>
</div>

<!-- Display habit details and progress -->
<div class="row">
  @each((goal, index) in goalsDetails)
    <div class="col-md-6 grid-margin stretch-card">
      <div class="card">
        <div class="card-body">
          <h4 class="card-title">{{ goal.habit.name }}</h4>
          <p class="card-description">Categoria: {{ goal.habit.category.name }}</p>
          <p class="card-description">Meta: {{ goal.frequencia }} ({{ goal.start_date.toFormat('dd/MM/yyyy') }} - {{ goal.end_date?.toFormat('dd/MM/yyyy') || 'Indefinido' }})</p>
          <p class="card-description">Total de Atividades: {{ goal.activities.length }}</p>

          <ul>
            @each((activity, i) in goal.activities)
              <li>
                Atividade: {{ activity.name }} - Data: {{ activity.date?.toFormat('dd/MM/yyyy') }}
              </li>
            @endeach
          </ul>
        </div>
      </div>
    </div>
  @endeach
</div>
@end
