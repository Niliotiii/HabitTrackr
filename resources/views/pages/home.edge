<!-- Display habit details and progress -->
<div class="row">
  @each((habit, index) in habitsDetails)
    <div class="col-md-4 grid-margin stretch-card">
      <div class="card">
        <div class="card-body">
          <h4 class="card-title">
            {{ habit.name }}
          </h4>
          <p class="card-description">
            Total Goals: {{ habit.totalGoals }}
          </p>
          <p class="card-description">
            Completed Goals: {{ habit.completedGoals }}
          </p>
          <p class="card-description">
            Progress: {{ ((habit.completedGoals / habit.totalGoals) * 100).toFixed(2) }}%
          </p>
        </div>
      </div>
    </div>
  @endeach
